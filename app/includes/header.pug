header(class="pl-4 pr-6")
            nav(class="d-flex align-items-center justify-content-between")
              a(href="index.html" class="py-4")
                img(src="images/logo.svg", alt="Hexlet" class="logo")
              ul(class="nav d-flex align-items-center justify-content-between flex-nowrap cg-7 cg-md-6" role="tablist")
                - 
                  var tabs = {
                    "contacts": [{
                      img: "people",
                      text: "Контакты",
                      selected: `${page=="index"}`,
                      href: "#contacts",
                    }],
                    "chats": [{
                      img: "chat",
                      text: "Сообщения",
                      selected: `${page=="chat"}`,
                      href: "#chats",
                    }],
                    "profile": [{
                      img: "person",
                      text: "Профиль",
                      selected: "false",
                      href: "#profile",
                    }],
                  }
                if page =="chat"
                  li(role="presentation" class="d-block d-md-none")
                    a(class="d-md-flex cg-2 color-light font-size-0 small-md" id="chat-tab" href="#current-chat" role="tab" data-toggle="tab" aria-controls="current-chat")
                      svg(xmlns="http://www.w3.org/2000/svg" width="25" height="24" fill="currentColor" class="bi bi-chat-left-text" viewBox="0 0 16 16")
                        path(d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z")
                        path(d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z")
                      | Чат
                each content, tab in tabs
                  li(role="presentation")
                    each item in content
                      a(class="d-md-flex align-items-center justify-content-between color-light cg-2 font-size-md-12 font-size-0" id=`${tab}-tab` data-toggle="tab" href=item.href role="tab" aria-controls=tab aria-selected=item.selected)
                        img(alt=item.text src=`images/icons/${item.img}.svg` class="nav-img")
                        = item.text